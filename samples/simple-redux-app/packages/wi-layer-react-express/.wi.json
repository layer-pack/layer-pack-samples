{
  "default": {
    "rootFolder": "src/App",
    "scripts": {
      "start": "./etc/cli/start"
    },
    "templates": {
      "SSRApp": "./templates/SSRApp",
      "StaticApp": "./templates/StaticApp",
      "RSApp": "./templates/RSApp"
    }
  },
  "dev": {
    "rootFolder": "src/App",
    "scripts": {
      "start": "./etc/cli/start"
    },
    "commands": {
      "server": {
        "watch": "dist/api/App.server.js",
        "run": "node --inspect=[::]:9229 ./dist/api/App.server.js -p 9701",
        "forever": true
      },
      "api": {
        "clearBefore": "dist/api",
        "run": "wpi :api -w",
        "vars": {
          "production": false,
          "DefinePluginCfg": {
            "__IS_DEV__": true
          }
        }
      },
      "www": {
        "clearBefore": "dist/www",
        "run": "wpi-dev-server :www --hot --host 0.0.0.0",
        "vars": {
          "devServer": true,
          "production": false,
          "DefinePluginCfg": {
            "__IS_DEV__": true
          }
        }
      }
    }
  },
  "prod": {
    "rootFolder": "src/App",
    "scripts": {
      "start": "./etc/cli/start"
    },
    "commands": {
      "www": {
        "clearBefore": "dist/www",
        "run": "wpi :www",
        "vars": {
        }
      },
      "api": {
        "wait": "www",
        "clearBefore": "dist/api",
        "run": "wpi :api"
      },
      "server": {
        "wait": "api",
        "run": "node ./dist/api/App.server.js -p 8080",
        "forever": true
      }
    }
  },
  "defaultBrowser": "www",
  "www": {
    "rootFolder": "src/App",
    "config": "./etc/wp/webpack.config.www.js",
    "vars": {
      "targetDir": "dist/www",
      "DefinePluginCfg": {
        "__IS_SERVER__": false
      },
      "production": true,
      "babelPreset": {
        "targets": {
          "browsers": "> 0.25%, not dead, safari >= 6, ios >= 6, chrome >= 52"
        },
        "loose": true
      }
    }
  },
  "defaultServer": "api",
  "api": {
    "rootFolder": "src/App",
    "config": "./etc/wp/webpack.config.api.js",
    "vars": {
      "targetDir": "dist/api",
      "externals": true,
      "production": true,
      "DefinePluginCfg": {
        "__IS_SERVER__": true
      }
    }
  },
  "Comp": "component",
  "component": {
    "rootFolder": "src/Comp",
    "config": "./etc/wp/webpack.config.comp.js",
    "vars": {
      "production": true,
      "externals": true,
      "targetDir": "dist",
      "rootAlias": "Comp"
    }
  },
  "static": {
    "rootFolder": "src/AppStatic",
    "config": "./etc/wp/webpack.config.static.js",
    "vars": {
      "targetDir": "dist/static",
      "rootAlias": "App",
      "DefinePluginCfg": {
        "__IS_SERVER__": false
      },
      "HtmlWebpackPlugin": {
        "template": "<%&packagePath%>/src/AppStatic/index.html.tpl"
      },
      "babelPreset": {
        "targets": {
          "browsers": "> 0.25%, not dead, safari >= 6, ios >= 6, chrome >= 52"
        },
        "loose": true
      }
    }
  }
}